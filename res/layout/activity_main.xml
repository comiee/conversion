<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jinzhi.MainActivity" >
    
	<TableLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_alignRight="@+id/GridLayout1" >
    
	    <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
	
	        <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="十进制" />
	
	        <EditText android:id="@+id/editText1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:ems="10" android:focusable="true" android:focusableInTouchMode="true">
	
	            <requestFocus />
	        </EditText>
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tableRow1"
	        android:layout_below="@+id/tableRow1" >
	
	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="二进制" />
	
	        <EditText
	            android:id="@+id/editText2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:focusable="true"
	            android:focusableInTouchMode="true" />
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tableRow1"
	        android:layout_below="@+id/tableRow2" >
	
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="八进制" />
	
	        <EditText
	            android:id="@+id/editText3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:focusable="true"
	            android:focusableInTouchMode="true" />
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/tableRow1"
	        android:layout_below="@+id/tableRow3" >
	
	        <TextView
	            android:id="@+id/textView4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="十六进制" />
	
	        <EditText
	            android:id="@+id/editText4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:focusable="true"
	            android:focusableInTouchMode="true" />
	    </TableRow>
	    
	</TableLayout>
	
    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:columnCount="6" >

        <Button
            android:id="@+id/button7"
            android:layout_width="58dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="58dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="8" />

        <Button
            android:id="@+id/button4"
            android:layout_width="58dp"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="1"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="58dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="58dp"
            android:layout_column="2"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="1"
            android:text="6" />

        <Button
            android:id="@+id/button1"
            android:layout_width="58dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="58dp"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="2"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="58dp"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="3" />

        <Button
            android:id="@+id/button9"
            android:layout_width="58dp"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="9" />

        <Button
            android:id="@+id/button10"
            android:layout_width="58dp"
            android:layout_column="4"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="0"
            android:text="A" />

        <Button
            android:id="@+id/button11"
            android:layout_width="58dp"
            android:layout_column="5"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="B" />

        <Button
            android:id="@+id/button12"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="C" />

        <Button
            android:id="@+id/button13"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="D" />

        <Button
            android:id="@+id/button14"
            android:layout_width="58dp"
            android:layout_column="4"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="E" />

        <Button
            android:id="@+id/button15"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="F" />

        <Button
            android:id="@+id/button16"
            android:layout_width="58dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:text="0" />

        <Button
            android:id="@+id/button17"
            android:layout_width="58dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:text="." />

        <Button
            android:id="@+id/button18"
            android:layout_width="58dp"
            android:layout_column="5"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:text="←"
            android:textColor="#ff0000" />
    </GridLayout>

</RelativeLayout>
